---
import Base from "@/layouts/Base.astro";

const title = "Transparente Preise – Tech Hilfe Pro";
const desc = "Klare Pakete ohne Überraschungen. Ab 19 € für Haushalte, 49 €/Nutzer/Monat für KMU. Monatlich kündbar.";
---

<Base {title} {desc}>
  <section class="max-w-3xl mx-auto space-y-6">
    <h1 class="text-3xl font-bold text-gray-900">Transparente Preise</h1>
    <p class="text-lg text-gray-700">
      Klare Pakete ohne Überraschungen. Wir glauben an einfache, faire Tarife – 
      damit Sie genau wissen, was Sie monatlich erwartet.
    </p>

    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm space-y-4">
      <h2 class="text-xl font-semibold text-indigo-700">Leistungen</h2>
      <ul class="list-disc pl-5 space-y-2 text-gray-700">
        <li>Privathaushalte: Basis-Support (WLAN, Updates, Backups)</li>
        <li>KMU: Pro-Support (Monitoring, Backup, Remote-Hilfe)</li>
        <li>Immer zum festen Monatspreis</li>
      </ul>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm space-y-4">
      <h2 class="text-xl font-semibold text-indigo-700">Preise</h2>
      <ul class="space-y-2 text-gray-700">
        <li>Privathaushalte: <strong>ab 19 € / Monat</strong></li>
        <li>KMU: <strong>49 € / Nutzer / Monat</strong></li>
      </ul>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm space-y-4">
      <h2 class="text-xl font-semibold text-indigo-700">Konditionen</h2>
      <ul class="list-disc pl-5 space-y-2 text-gray-700">
        <li>Monatlich kündbar</li>
        <li>Alle Preise inkl. MwSt.</li>
      </ul>
    </div>

    <div class="text-center mt-8">
      <a 
        href="https://wa.me/4915565029989?text=Ich%20möchte%20Infos%20zu%20den%20Preispaketen."
        class="inline-block px-6 py-3 rounded-xl bg-indigo-600 text-white font-medium hover:bg-indigo-700 transition"
      >
        Jetzt unverbindlich starten
      </a>
    </div>
  </section>
</Base>
