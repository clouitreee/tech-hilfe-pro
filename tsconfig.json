{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "strictNullChecks": true,

    // === Alias limpio a /src ===
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Opcional, pero Ãºtil en proyectos JS+Astro
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "preserve"
  }
}
